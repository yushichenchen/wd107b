<script>
    var a=0,b,c,d,t=0,g,l=1,h=100;
    function times() {
        a +=1 ;
        document.getElementById("demo").innerHTML=a;
        if(a>10)alert("不要再點了!!!我要壞掉了!!!!");

    } 
    function getRandom(x){
        
    b=Math.floor(Math.random()*x)+1;
    alert("亂數設好了喔!!!");
};

    function  gass(){
    
    g=parseInt(document.getElementById("math").value);
	if(g>=h || g<=l )
		{
			alert("要不要重新猜阿!!數字不太對ㄟ?");
		}
	else if( g==b)
	{
		alert("你答對了!!");
	}	
	else
	{
		if(g>b) h=g;
        else l=g;
        alert("再來!!"+l+"~"+h);
	}
	t+=1;
	}
    function tryu(){
	alert("你猜了"+t+"次!!");
	if(t==1)alert("你是不是作弊阿!!");
	else if(t<=5)alert("你真棒!!");
	else if(t<=10)alert("加油!!你可以更好!!");
	else if(t>=20)alert("有那麼難嗎Orz");
	else alert("弱!!!");
    }
</script>
